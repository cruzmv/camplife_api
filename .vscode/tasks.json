// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "tsc: build",
        "command": "npx",
        "args": ["tsc"],
        "type": "shell",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [
          "$tsc"
        ],
        "presentation": {
          "reveal": "always",
          "panel": "new"
        },
        "runOptions": {
          "runOn": "folderOpen"
        }
      }
    ]
  }
  