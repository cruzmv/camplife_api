// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug TypeScript",
        "program": "${workspaceFolder}/dist/app.js",
        "preLaunchTask": "tsc: build",
        "outFiles": ["${workspaceFolder}/dist/**/*.js"],
        "sourceMaps": true,
        "smartStep": true,
        "skipFiles": ["<node_internals>/**"],
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }
  